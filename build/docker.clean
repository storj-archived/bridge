#!/bin/bash

source ./vars
IMAGE=$NAMESPACE/$APP
CONTAINER_NAMES=$(docker ps -a --format "{{.Names}}" | grep $APP)
IMAGE_IDS=$(docker images | grep $IMAGE | tr -s ' ' | cut -d ' ' -f 3)

./docker.stopall

for container in $CONTAINER_NAMES; do
  docker rm $container
done

for image in $IMAGE_IDS; do
  docker rmi $image
done
